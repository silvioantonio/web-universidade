
@model WebUniversidade.Models.Departamento

@{
    ViewData["Title"] = "Departamento";
}

<h2>Departments</h2>

<p>
    <a asp-action="Criar">Novo Departamento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orcamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Administrador)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Orcamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Administrador.NomeCompleto)
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.DepartamentoId">Editar</a> |
                    <a asp-action="Detalhes" asp-route-id="@item.DepartamentoId">Detalhes</a> |
                    <a asp-action="Deletar" asp-route-id="@item.DepartamentoId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>