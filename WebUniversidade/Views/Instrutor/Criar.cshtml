
@model WebUniversidade.Models.Instrutor

@{
    ViewData["Title"] = "Criar";
}

<h1>Criar</h1>

<h4>Instrutor</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Criar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sobrenome" class="control-label"></label>
                <input asp-for="Sobrenome" class="form-control" />
                <span asp-validation-for="Sobrenome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataContratacao" class="control-label"></label>
                <input asp-for="DataContratacao" class="form-control" />
                <span asp-validation-for="DataContratacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Escritorio.Localizacao" class="control-label"></label>
                <input asp-for="Escritorio.Localizacao" class="form-control" />
                <span asp-validation-for="Escritorio.Localizacao" class="text-danger" />
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                List<WebUniversidade.Models.EscolaViewModels.DataAssinaturaCurso> cursos = ViewBag.Cursos;

                                foreach (var course in cursos)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="cursosSelecionados"
                                               value="@course.CursoId"
                                               @(Html.Raw(course.Assinatura ? "checked=\"checked\"" : "")) />
                                        @course.CursoId @:  @course.Titulo
                                    @:</td>
                                }
                            @:</tr>
                            }
                        </table>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Criar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Voltar</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }